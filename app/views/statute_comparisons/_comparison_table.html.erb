<table>
   <tr>
      <th>Substance</th>
      <th>Difference</th>
      <th>Statute</th>
   </tr>
   <% comparisons.each do |c| %>
      <tr>
         <td><%= link_to c[:substance_statute].substance.name, c[:substance_statute].substance %></td>
         <% if c[:difference] == 'Only Regulated Here' %>
            <td class='expiration'><%= c[:difference] %></td>
         <% else %>
            <td class='middle'><%= c[:difference] %></td>
         <% end %>
         <td><%= link_to c[:substance_statute].statute.formatted_name, c[:substance_statute].statute %></td>
      </tr>
   <% end %>
</table>
