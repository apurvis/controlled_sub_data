<table id="main_table" border="1">
   <tr>
      <td>ID</td>
      <td>Name</td>
      <td>Classification</td>
      <td>DEA Code</td>
   </tr>

   <% @substances.each do |substance| %>
      <tr>
         <td><%= link_to "#{substance.id}", substance_path(substance) %></td>
         <td><%= substance.id %></td>
         <td><%= substance.name %></td>
         <td><%= substance.substance_classification.try(:name) %></td>
         <td><%= substance.dea_code %>
      <tr>
   <% end %>
</table>
