<div class='container'>
  <div class='row'>
    <h3>Users (<%= link_to 'Invite a new user', new_user_invitation_path %>)</h3>

    <div class='column'>
      <table class='properties'>
        <tr>
          <th>Email</th>
          <th>Changes Submitted</th>
          <th>Role</th>
          <th>Delete</th>
        </tr>

        <% @users.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
