<div class='container'>
  <div class='row'>
    <h3>Users</h3>

    <h4><%= link_to 'Invite a new user', new_user_invitation_path %></h4>
    <div class='column'>
      <table class='table'>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
